{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@mixins": ["src/mixins"],
      "@mixins/*": ["src/mixins/*"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@helper/*": ["src/helper/*"],
      "@helper": ["src/helper"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@generated/*": ["src/generated/*"],
      "@generated": ["src/generated"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ],
  "exclude": ["node_modules", "**/generated/*"]
}
